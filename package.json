{
  "name": "office-space-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "apps/web-app",
    "apps/auth-service"
  ],
  "scripts": {
    "build": "npx tsc -b",
    "prebuild": "npx tsc -b libs/common && npx tsc -b libs/logger",
    "create:app": "node scripts/create-app.mjs",
    "dev:web": "npm run dev --workspace=apps/web-app",
    "build:auth": "node scripts/build-auth.mjs",
    "dev:auth": "npm run prebuild && npm run build:auth && npm run --workspace=apps/auth-service start:dev"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
